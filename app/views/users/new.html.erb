<form accept-charset="UTF-8" action="/users" method="post">
  <label for="username">Username</label>
  <input id="username" type="text" name="[user][username]" value="<%=@user.username%>"/>
  <label for="email">Email</label>
  <input type="email" name="[user][email]" value="<%=@user.email%>"/>
  <label for="password">Password</label>
  <input type="password" name="[user][password]" value="<%=@user.password%>"/>
  <input type="submit" />
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
</form>


<hr>

<%= form_tag("/users", :method => "post") do %>
  <%= label_tag(:username, "Username") %>
  <%= text_field_tag(:username, value=@user.username) %>

  <%= label_tag(:email, "Email") %>
  <%= email_field_tag(:email, value=@user.email) %>

  <%= label_tag(:password, "Password") %>
  <%= password_field_tag(:password, value=@user.password) %>

  <%= submit_tag("Submit") %>
<% end %>


<hr>

<%= form_for @user do |f| %>


  <%= f.label :username, "Your name here" %>
  <%= f.text_field :username %>

  <%= f.label :email, "Your email" %>
  <%= f.email_field :email, :placeholder => "example@example.com" %>

  <%= f.label :password, "Your password" %>
  <%= f.password_field :password %>

  <%= f.submit "Submit" %>
<% end %>




















